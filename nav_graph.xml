<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/booksFragment">

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.example.bookzone.ui.BooksFragment"
        android:label="Livros">
        <action
            android:id="@+id/action_booksFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.bookzone.ui.FavoritesFragment"
        android:label="Favoritos" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.bookzone.ui.ProfileFragment"
        android:label="Perfil" />

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.bookzone.ui.BookDetailFragment"
        android:label="Detalhes do Livro">
        <argument
            android:name="bookTitle"
            app:argType="string" />
    </fragment>
</navigation>
